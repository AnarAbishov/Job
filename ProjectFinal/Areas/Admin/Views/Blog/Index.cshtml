@model IEnumerable<ProjectFinal.Models.Blog>

@{
    ViewBag.Title = "Blog";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<p>
    @Html.ActionLink("Create New", "Create", "Blog", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Sekil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tarix)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Basliq)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Uploads/@Html.DisplayFor(modelItem => item.Sekil)" width="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tarix)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Basliq)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
